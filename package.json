{
    "name": "ngx-quill-bbcode",
    "version": "3.0.0",
    "author": {
        "name": "Anrip Wong",
        "email": "mail@anrip.com",
        "url": "http://www.anrip.com"
    },
    "homepage": "http://www.anrip.com",
    "description": "An angular (>= v7) component for the easy use of the QuillJS richt text editor.",
    "license": "Apache-2.0",
    "keywords": [
        "editor",
        "rich text",
        "text editor",
        "wysiwyg",
        "quill",
        "quilljs",
        "angular",
        "directive",
        "component"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anrip/quill-bbcode-ngx.git"
    },
    "bugs": {
        "url": "https://github.com/anrip/quill-bbcode-ngx/issues"
    },
    "scripts": {
        "build": "ng-packagr -p package.json",
        "lint": "tslint --project tslint.json",
        "push": "cd public && npm publish",
        "start": "npm run lint"
    },
    "main": "bundles/index.js",
    "module": "module.js",
    "typings": "index.d.ts",
    "dependencies": {
        "discuz-bbcode": "^0.2.7",
        "quill": "^2.0.0-dev.3",
        "quill-chinese": "^2.0.0-4"
    },
    "devDependencies": {
        "@angular/common": "^8.0.0",
        "@angular/compiler": "^8.0.0",
        "@angular/compiler-cli": "^8.0.0",
        "@angular/core": "^8.0.0",
        "@angular/forms": "^8.0.0",
        "@angular/platform-browser": "^8.0.0",
        "@types/node": "~8.9.4",
        "@types/quill": "^1.3.10",
        "codelyzer": "^5.0.0",
        "ng-packagr": "^5.2.0",
        "rxjs": "~6.4.0",
        "tslint": "~5.15.0",
        "typescript": "~3.4.3",
        "zone.js": "~0.9.1"
    },
    "peerDependencies": {
        "@angular/common": "^7.0.0 || ^8.0.0",
        "@angular/core": "^7.0.0 || ^8.0.0",
        "@angular/forms": "^7.0.0 || ^8.0.0",
        "@angular/platform-browser": "^7.0.0 || ^8.0.0",
        "rxjs": "^6.3.0"
    },
    "ngPackage": {
        "whitelistedNonPeerDependencies": [
            "discuz-bbcode",
            "quill",
            "quill-chinese"
        ],
        "dest": "public",
        "lib": {
            "entryFile": "src/public-api.ts",
            "cssUrl": "inline"
        }
    }
}
